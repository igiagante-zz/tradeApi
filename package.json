  "version": "1.0.0",
  "description": "Api for following trades and risk capital management",
  "main": "index.js",
  "dependencies": {
    "express": "^4.16.2",
    "body-parser": "^1.18.2",
    "mongoose": "^4.13.7",
    "morgan": "^1.9.0",
    "winston": "~2.4.0",
    "debug": "~3.1.0",
    "dotenv": "~4.0.0",
    "express-winston": "~2.4.0",
    "helmet": "~3.9.0",
    "http-status": "~1.0.1",
    "joi": "~13.0.2",
    "async": "^2.6.0",
    "lodash": "^4.17.4",
    "bcrypt": "~1.0.3",
    "jwt-simple": "~0.5.1",
    "moment": "~2.20.1",
    "request": "~2.83.0",
    "bluebird": "~3.5.1",
    "awilix": "^2.2.2"
  },
  "devDependencies": {
    "mocha": "^4.0.1",
    "chai": "^4.1.2",
    "sinon": "^4.1.3",
    "istanbul": "^0.4.5",
    "supertest": "^3.0.0",
    "supertest-as-promised": "^4.0.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0"
  },
  "standard": {
    "env": [
      "mocha"
    ],
    "ignore": [
      "mock"
    ]
  },
  "scripts": {
    "test": "mocha -R spec src/**/*.spec.js",
    "start": "node src/index.js",
